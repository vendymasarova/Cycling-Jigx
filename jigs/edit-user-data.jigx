datasources:
  userData: 
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_DYNAMIC
      entities:
        - default/profile-user
      query: |
        SELECT
          id
          ,'$.firstName'
          ,'$.surName'
          ,'$.dateOfBirth'
          ,'$.email'
          ,'$.phoneNum'
          ,'$.userId'
        FROM [default/profile-user]
        WHERE id = @userId
      queryParameters:
        userId: =@ctx.jig.inputs.userId
      
        
children:
  - type: component.form
    instanceId: friend-form
    options:
      children:
        - type: component.text-field
          instanceId: firstName
          options:
            label: First name
            initialValue: =@ctx.datasources.userData.firstName
        - type: component.text-field
          instanceId: surName
          options:
            label: Last name
            initialValue: =@ctx.datasources.userData.surName
        - type: component.date-picker
          instanceId: dateOfBirth
          options:
            label: Statistics
            initialValue: =$fromMillis($toMillis(@ctx.datasources.userData.dateOfBirth), '[D1o] [MNn] [Y]') 
        - type: component.email-field
          instanceId: picture
          options:
            label: email
            initialValue: =@ctx.datasources.userData.email