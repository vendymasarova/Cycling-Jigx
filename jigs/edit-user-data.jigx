title: Edit friend information
description: Description of your Jig
type: jig.default

actions:
  - children:
      - type: action.submit-form
        options:
          formId: friend-form
          provider: DATA_PROVIDER_DYNAMIC
          title: Update Record
          entity: default/profile-user
          method: update
          data: 
            id: =@ctx.datasources.userData.id
          goBack: previous
          onSuccess: 
            title: Data updated

