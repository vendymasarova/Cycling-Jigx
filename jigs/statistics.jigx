title: Statistics
type: jig.default

datasources:
  static-data:
    type: datasource.static
    options:
      data:
        - y: 20
          x: kukuk
        - y: 60
          x: tralala
          color: transparent
        
children:
  - type: component.pie-chart
    options:
      chart:
        title:
          text: "20%"
          verticalAlign: center         
      series:
        - data: =@ctx.datasources.static-data
          layout: pie
          color: color3
  
widgets:
  2x2: 
    type: widget.chart
    options:        
      chart: 
        type: component.pie-chart
        options:
          chart:
            title:
              text: "20%"
              verticalAlign: center         
          series:
            - data: =@ctx.datasources.static-data
              layout: arch
              color: color3
      top:
        type: component.titles
        options:
          title: Month statistics
          align: center