title: Statistics
type: jig.default

datasources:
  static-data:
    type: datasource.static
    options:
      data:
        - y: 20
          x: kukuk
        - y: 60
          x: tralala
          color: transparent
        
children:
  - type: component.pie-chart
    options:
      chart:
        title:
          text: "20%"
          verticalAlign: center         
      series:
        - data: =@ctx.datasources.static-data
          layout: pie
          color: color3
  
